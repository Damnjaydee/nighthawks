############################################
# Nighthawks â€” Server Environment (.env)
############################################

# ========== Core ==========
NODE_ENV=production
PORT=5009

# Base URL used by the app (local in dev)
PUBLIC_URL=http://localhost:5009

# CORS allowlist (local + prod)
CORS_ORIGINS=http://localhost:5009,http://127.0.0.1:5009,http://localhost:5500,http://127.0.0.1:5500,https://nhconcerige.com

# Session secret (64 hex chars = 32 bytes)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=REPLACE_WITH_64_CHAR_HEX

# Cookies
COOKIE_SECURE=0
SESSION_COOKIE_NAME=nighthawks.sid
SESSION_TTL_SECONDS=1209600

# ========== Ops ==========
LOG_LEVEL=info
TRUST_PROXY=1

# ========== Rate limits ==========
RATE_LIMIT_WINDOW_MIN=15
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=50

# ========== Storage ==========
SQLITE_DB_PATH=./db/requests.db
# MONGODB_URI=mongodb+srv://USER:PASS@cluster0.xxxxx.mongodb.net/nighthawks

# ========== Admin login (/login.html) ==========
ADMIN_EMAIL=admin@nighthawks.com
# MUST be a bcrypt hash that matches your chosen password
ADMIN_PASSWORD_HASH=$2a$12$9eZK8S.BmnbiAD9B1/8ib.MZl/B/tvAj2geTlfkYFncF0mrwO66HG

# ========== Access codes (optional) ==========
ACCESS_CODES=VTP45D6,VTP789,VTP999

# ========== Invite links ==========
INVITES_ENABLED=0
INVITE_SIGNING_SECRET=REPLACE_WITH_64_CHAR_HEX
INVITE_BASE_URL=http://localhost:5009/membership.html
INVITE_DAYS=14

# ========== Email (optional) ==========
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=REPLACE_WITH_SMTP_USER
SMTP_PASS=REPLACE_WITH_SMTP_PASSWORD

EMAIL_FROM="Nighthawks <no-reply@nhconcerige.com>"
EMAIL_TO=concierge@nhconcerige.com

# ========== Feature flags ==========
MEMBERSHIP_APPS_OPEN=0
PUBLIC_REQUESTS_ENABLED=1
